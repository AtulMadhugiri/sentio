<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.stemfbla.sentio.HomeFragment">
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tesla STEM High School"
    android:layout_marginTop="10dp"
    android:id="@+id/textView"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:singleLine="true"
    android:textSize="27dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Principal:"
    android:id="@+id/textView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textStyle="bold"
    android:paddingLeft="25dp"
    android:textSize="16dp"
    android:layout_below="@+id/textView9" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Cindy Duenas"
    android:id="@+id/textView4"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3"
    android:textStyle="normal"
    android:phoneNumber="false"
    android:paddingLeft="10dp"
    android:textSize="16dp"
    android:layout_below="@+id/textView9" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Office Manager:"
    android:id="@+id/textView5"
    android:layout_below="@+id/textView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="16dp"
    android:textStyle="bold"
    android:paddingLeft="25dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Phone:"
    android:id="@+id/textView6"
    android:layout_below="@+id/textView5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textStyle="bold"
    android:textSize="16dp"
    android:paddingLeft="25dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="425.936.2771"
    android:id="@+id/textView7"
    android:paddingLeft="10dp"
    android:textStyle="normal"
    android:textSize="16dp"
    android:phoneNumber="true"
    android:layout_below="@+id/textView5"
    android:layout_toRightOf="@+id/textView6"
    android:layout_toEndOf="@+id/textView6" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Lili Hughes"
    android:id="@+id/textView8"
    android:layout_below="@+id/textView4"
    android:layout_toRightOf="@+id/textView5"
    android:layout_toEndOf="@+id/textView5"
    android:paddingLeft="10dp"
    android:textStyle="normal"
    android:textSize="16dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tesla STEM High School focuses on environmental sustainability and STEM education, inspiring students to tackle engineering projects and analyze global impacts."
    android:id="@+id/textView9"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/slider"
    android:paddingLeft="25dp"
    android:textColor="@color/material_text_primary"
    android:paddingRight="25dp"
    android:textSize="18dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="4301 228th Ave N.E.\nRedmond, WA 98053"
    android:id="@+id/textView2"
    android:layout_alignTop="@+id/textView10"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3"
    android:password="false"
    android:textSize="16dp"
    android:paddingLeft="10dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Address:"
    android:id="@+id/textView10"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingLeft="25dp"
    android:textStyle="bold"
    android:layout_alignParentBottom="false"
    android:layout_below="@+id/textView6"
    android:textSize="16dp" />

</RelativeLayout>